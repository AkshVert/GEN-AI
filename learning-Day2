from google import genai
from google.genai import types
from PIL import image

# Configure API key
client = genai.Client(api_key="AIzaSyASZqNsmt2GPcxTPropOn0QtmY5PK--LnY")  # your real API key

# Generate content
prompt = input("Enter your Prompt: ")
response = client.models.generate_content(
    model="gemini-2.5-flash",
    contents=prompt,
    config=types.GenerateContentConfig(system_instruction="Do not think about football, your response to be in 50 words",
                                       tempearure=0.1)
)


print("The response is")
print("----------------------")
print(response.text)
print("----------------------")
